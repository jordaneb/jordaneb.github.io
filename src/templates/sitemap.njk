<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ site.siteUrl }}{{ basePath }}/</loc>
  </url>
  {% for page in pages %}
  <url>
    <loc>{{ site.siteUrl }}{{ page.url }}</loc>
  </url>
  {% endfor %}
  {% for post in posts %}
  <url>
    <loc>{{ site.siteUrl }}{{ post.url }}</loc>
    <lastmod>{{ post.dateIso }}</lastmod>
  </url>
  {% endfor %}
</urlset>
